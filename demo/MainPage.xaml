<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:demo.ViewModels"
             x:DataType="vm:MainViewModel"
             x:Class="demo.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="OfflineData Benchmarks"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Click the buttons to run data operations"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Click the buttons to run data operations" />

            <!-- Busy indicator -->
            <ActivityIndicator 
                IsRunning="{Binding IsBusy}" 
                IsVisible="{Binding IsBusy}"
                Color="{StaticResource Primary}"
                HeightRequest="50" />

            <Label
                Text="Results will be displayed below:"
                SemanticProperties.HeadingLevel="Level3"
                SemanticProperties.Description="Results will be displayed below:" />

            <Label
                Text="{Binding Results}"
                SemanticProperties.Description="Status message" />

            <Grid ColumnDefinitions="*,*,*"
                  RowDefinitions="Auto,Auto,Auto"
                  RowSpacing="20"
                  ColumnSpacing="10">
                
                <!-- Generate -->
                <Label
                    Text="Generate"
                    Grid.Row="0"
                    Grid.Column="0"
                    VerticalOptions="Center" />

                <Entry
                    Text="{Binding RecordCount}"
                    Keyboard="Numeric"
                    Grid.Row="0"
                    Grid.Column="1"
                    VerticalOptions="Center" />

                <!-- Attachments checkbox -->
                <HorizontalStackLayout
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Spacing="10">
                    <CheckBox IsChecked="{Binding IncludeAttachments}" />
                    <Label 
                        Text="Add random attachments"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>

                <Button
                    Text="Generate Records"
                    Command="{Binding GenerateRecordsCommand}"
                    Grid.Row="2"
                    Grid.Column="0"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}" />

                <!-- Search -->
                <Label
                    Text="Search"
                    Grid.Row="0"
                    Grid.Column="2"
                    VerticalOptions="Center" />

                <Entry
                    Text="{Binding SearchTerm}"
                    Placeholder="e.g., volcano, piano"
                    Grid.Row="1"
                    Grid.Column="2"
                    VerticalOptions="Center" />

                <Button
                    Text="Search Records"
                    Command="{Binding SearchRecordsCommand}"
                    Grid.Row="2"
                    Grid.Column="2"
                    IsEnabled="{Binding IsBusy, Converter={StaticResource InvertedBoolConverter}}" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
